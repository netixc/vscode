{
  "name": "zai-chat",
  "description": "Z.AI Language Model Provider",
  "version": "0.0.1",
  "publisher": "vscode",
  "license": "MIT",
  "enabledApiProposals": [
    "chatProvider",
    "languageModelCapabilities"
  ],
  "private": true,
  "activationEvents": [],
  "main": "./out/extension",
  "engines": {
    "vscode": "^1.55.0"
  },
  "contributes": {
    "languageModelChatProviders": [
      {
        "vendor": "zai",
        "displayName": "Z.AI"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Z.AI Configuration",
      "properties": {
        "zai.apiKey": {
          "type": "string",
          "default": "",
          "description": "Z.AI API Key (get from https://z.ai/manage-apikey/apikey-list)",
          "scope": "application"
        },
        "zai.baseUrl": {
          "type": "string",
          "default": "https://api.z.ai/api/coding/paas/v4/",
          "description": "Z.AI API Base URL",
          "scope": "application"
        },
        "zai.defaultModel": {
          "type": "string",
          "default": "glm-4.6",
          "enum": ["glm-4.6", "glm-4.5", "glm-4.5-Air"],
          "description": "Default Z.AI model to use",
          "scope": "application"
        },
        "zai.timeout": {
          "type": "number",
          "default": 30000,
          "description": "Request timeout in milliseconds",
          "scope": "application"
        },
        "zai.maxRetries": {
          "type": "number",
          "default": 3,
          "description": "Maximum number of retries for failed requests",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
    "vscode:prepublish": "node ../../node_modules/gulp/bin/gulp.js --gulpfile ../../build/gulpfile.extensions.js compile-extension:zai-chat ./tsconfig.json"
  },
  "devDependencies": {
    "@types/node": "22.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/vscode.git"
  }
}
